<div id="chatSideBar" class="sidebar-right bg-info">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 pb-3 align-items-end">
                <button type="button" class="close text-white" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div style="height:50%" class="col-12">
                <div class="card">
                    <div style="font-size: 10pt" class="card-header"><h5>Chat Logs</h5></div>
                    <div class="card-body scroll-chatlogs">
                        <div id="chatLogs" style="font-size: 12pt" class="list-group list-group-flush">
                        </div>
                    </div>
                </div>
            </div>
            <div style="height:40%" class="col-12 mt-4">
                <div class="card">
                    <div style="font-size: 10pt" class="card-header d-flex justify-content-between">
                        <div class="align-self-center"><h5>Chat</h5></div>
                        <div><button type="submit" class="btn btn-primary btn-circle btn-md" id="leaveChat"><i class="fas fa-sign-out-alt"></i></button></div>
                    </div>
                    <div class="card-body room scroll-chat" id="chatLogRoom">
                        <div id="chatLog" style="font-size: 8pt" class="messages">
                        </div>
                    </div>
                    <div class="card-footer">
                        <form class="form-inline d-flex justify-content-between" id="newMessage">
                            <div><input type="text" class="form-control form-control-sm align-self-center" id="message" style="width: 25vw "
                                   placeholder="Enter message" ></div>&nbsp;&nbsp;
                            <div><button type="submit" class="btn btn-primary btn-circle btn-md" id="submitMessage"><i class="fa fa-paper-plane" aria-hidden="true"></i></button></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>